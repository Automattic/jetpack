{
	"name": "automattic/jetpack-modules",
	"description": "Jetpack Modules package",
	"type": "library",
	"license": "GPL-2.0-or-later",
	"require": {},
	"require-dev": {
		"yoast/phpunit-polyfills": "0.2.0",
		"automattic/jetpack-changelogger": "^1.2"
	},
	"scripts": {
		"test-js": [
			"Composer\\Config::disableProcessTimeout",
			"pnpm install",
			"pnpm run test"
		],
		"test-coverage": [
			"Composer\\Config::disableProcessTimeout",
			"pnpm install",
			"pnpx nyc --report-dir=\"$COVERAGE_DIR\" pnpm run test"
		]
	},
	"repositories": [
		{
			"type": "path",
			"url": "../../packages/*",
			"options": {
				"monorepo": true
			}
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true
}
