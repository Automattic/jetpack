{
	"name": "automattic/jetpack-storybook",
	"description": "Jetpack Storybook component library",
	"type": "library",
	"license": "GPL-2.0-or-later",
	"require": {},
	"require-dev": {
		"yoast/phpunit-polyfills": "1.1.0 || 1.1.1",
		"automattic/jetpack-changelogger": "@dev"
	},
	"autoload": {
		"classmap": [
			"src/"
		]
	},
	"scripts": {
		"build-development": "NODE_ENV=development pnpm run storybook:build",
		"build-production": "NODE_ENV=production pnpm run storybook:build"
	},
	"repositories": [
		{
			"type": "path",
			"url": "../../packages/*",
			"options": {
				"monorepo": true
			}
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"extra": {
		"mirror-repo": "Automattic/jetpack-storybook"
	}
}
