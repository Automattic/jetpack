// Config for a JS-using project. If using typescript, rename this to "tsconfig.json".
{
	"extends": "jetpack-js-tools/tsconfig.base.json",
	"include": [ "./src/*" ],
	"compilerOptions": {
		"typeRoots": [ "./node_modules/@types/", "src" ],
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./build/",
		"noEmit": false,
		"declaration": true,
		"module": "es6",
		"target": "es5"
	}
}
