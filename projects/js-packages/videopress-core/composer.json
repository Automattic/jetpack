{
	"name": "automattic/jetpack-videopress-core",
	"description": "VideoPress Core Functionality",
	"type": "library",
	"license": "GPL-2.0-or-later",
	"require": {},
	"require-dev": {
		"yoast/phpunit-polyfills": "1.1.0",
		"automattic/jetpack-changelogger": "@dev"
	},
	"autoload": {
		"classmap": [
			"src/"
		]
	},
	"scripts": {
		"build-development": [
			"Composer\\Config::disableProcessTimeout",
			"pnpm run build"
		],
		"build-production": [
			"NODE_ENV=production pnpm run build"
		],
		"watch": [
			"Composer\\Config::disableProcessTimeout",
			"pnpm run watch"
		],
		"test-js": [
			"pnpm run test"
		]
	},
	"repositories": [
		{
			"type": "path",
			"url": "../../packages/*",
			"options": {
				"monorepo": true
			}
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"extra": {
		"autotagger": true,
		"npmjs-autopublish": true,
		"mirror-repo": "Automattic/jetpack-videopress-core",
		"changelogger": {
			"link-template": "https://github.com/Automattic/jetpack-videopress-core/compare/${old}...${new}"
		}
	}
}
