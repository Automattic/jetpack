{
	"name": "automattic/wp-data-sync",
	"description": "Sync data from client to server and vice versa using @wordpress/data stores.",
	"type": "library",
	"license": "GPL-2.0-or-later",
	"require": {},
	"require-dev": {
		"automattic/jetpack-changelogger": "@dev"
	},
	"autoload": {
		"classmap": [
			"src/"
		]
	},
	"scripts": {
		"build-development": [
			"pnpm run build"
		],
		"build-production": [
			"NODE_ENV=production pnpm run build"
		],
		"test-js": [
			"pnpm run test"
		]
	},
	"repositories": [
		{
			"type": "path",
			"url": "../../packages/*",
			"options": {
				"monorepo": true
			}
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"extra": {
		"autotagger": true,
		"changelogger": {
			"link-template": "https://github.com/Automattic/wp-data-sync/compare/v${old}...v${new}"
		},
		"mirror-repo": "Automattic/wp-data-sync"
	}
}
