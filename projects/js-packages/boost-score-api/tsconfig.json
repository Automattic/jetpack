{
	"extends": "jetpack-js-tools/tsconfig.base.json",
	"include": [ "./src/*", "./src/utils/*" ],
	"compilerOptions": {
		"typeRoots": [ "./node_modules/@types/", "src/*" ],
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./build/",
		"noEmit": false,
		"declaration": true,
		"module": "es6",
		"target": "es5",
		"moduleResolution": "nodenext"
	}
}
