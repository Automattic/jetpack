{
	"name": "automattic/jetpack-phpcs-filter",
	"description": "A filter for PHP CodeSniffer to add support for .phpcsignore files and per-directory configuration files.",
	"type": "library",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"phpcs",
		"filter",
		"plugin",
		"phpcsignore",
		"per-directory config",
		"dev",
		"testing"
	],
	"require": {
		"php": ">=7.0",
		"automattic/ignorefile": "@dev",
		"squizlabs/php_codesniffer": "^3.6.1"
	},
	"require-dev": {
		"automattic/jetpack-changelogger": "@dev",
		"yoast/phpunit-polyfills": "1.1.0"
	},
	"autoload": {
		"classmap": [
			"src/"
		]
	},
	"scripts": {
		"phpunit": [
			"./vendor/phpunit/phpunit/phpunit --colors=always"
		],
		"test-php": [
			"@composer phpunit"
		]
	},
	"repositories": [
		{
			"type": "path",
			"url": "../../packages/*",
			"options": {
				"monorepo": true
			}
		},
		{
			"type": "vcs",
			"url": "https://github.com/Automattic/PHP_CodeSniffer"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"extra": {
		"branch-alias": {
			"dev-trunk": "2.0.x-dev"
		}
	}
}
