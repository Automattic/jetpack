{
	"name": "automattic/ignorefile",
	"description": "Handle .gitignore style files.",
	"type": "library",
	"license": "GPL-2.0-or-later",
	"require": {},
	"require-dev": {
		"automattic/jetpack-changelogger": "^3.1",
		"wikimedia/at-ease": "^1.2 || ^2.0",
		"yoast/phpunit-polyfills": "1.0.3"
	},
	"autoload": {
		"classmap": [
			"src/"
		]
	},
	"scripts": {
		"phpunit": [
			"./vendor/phpunit/phpunit/phpunit --colors=always"
		],
		"test-coverage": [
			"php -dpcov.directory=. ./vendor/bin/phpunit --coverage-clover \"$COVERAGE_DIR/clover.xml\""
		],
		"test-php": [
			"@composer phpunit"
		]
	},
	"repositories": [
		{
			"type": "path",
			"url": "../../packages/*",
			"options": {
				"monorepo": true
			}
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"extra": {
		"mirror-repo": "Automattic/ignorefile",
		"changelogger": {
			"link-template": "https://github.com/Automattic/ignorefile/compare/v${old}...v${new}"
		},
		"autotagger": true,
		"branch-alias": {
			"dev-master": "1.0.x-dev"
		}
	}
}
