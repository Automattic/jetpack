{
	"name": "verbum",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "vite build",
		"build:editor": "vite build --config src/editor/vite.config.ts",
		"build:sync": "npm run build && rsync -avz index.php assets dist wpcom:/home/wpcom/public_html/wp-content/mu-plugins/verbum/",
		"start": "vite build --watch",
		"start:sync": "nodemon -w src/ -w index.php -w assets/ -e tsx,ts,js,scss,php -x npm run build:sync",
		"lint": "eslint src --ext .ts,.tsx",
		"lint:fix": "eslint src --ext .ts,.tsx --fix",
		"e2e-tests": "playwright test --config playwright.config.ts",
		"postinstall": "cp pre-push.sh .git/hooks/pre-push && chmod +x .git/hooks/pre-push"
	},
	"dependencies": {
		"@preact/signals": "^1.2.2",
		"@wordpress/block-editor": "^12.15.0",
		"@wordpress/block-library": "^8.24.0",
		"@wordpress/components": "^25.13.0",
		"@wordpress/edit-post": "^7.24.0",
		"@wordpress/element": "^5.24.0",
		"@wordpress/format-library": "^4.24.0",
		"preact": "^10.13.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"sass": "^1.63.6",
		"wpcom-proxy-request": "^7.0.3"
	},
	"devDependencies": {
		"@playwright/test": "^1.40.1",
		"@preact/preset-vite": "^2.5.0",
		"@rollup/plugin-alias": "^5.1.0",
		"@types/node": "^20.4.2",
		"@types/react": "^18.2.28",
		"@types/react-dom": "18.2.0",
		"@types/wordpress__block-editor": "^11.5.7",
		"@types/wordpress__block-library": "^2.6.3",
		"@types/wordpress__rich-text": "^6.4.5",
		"@typescript-eslint/eslint-plugin": "^5.24.0",
		"@vitejs/plugin-react": "^4.2.1",
		"@wordpress/eslint-plugin": "^14.10.0",
		"eslint": "^8.53.0",
		"eslint-config-preact": "^1.3.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.4",
		"nodemon": "^3.0.1",
		"sass": "^1.69.5",
		"typescript": "^5.2.2",
		"vite": "^5.0.0",
		"vite-plugin-static-copy": "^1.0.0"
	},
	"eslintConfig": {
		"extends": "preact"
	}
}
