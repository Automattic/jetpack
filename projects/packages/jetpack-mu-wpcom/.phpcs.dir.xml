<?xml version="1.0"?>
<ruleset>

	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="jetpack-mu-wpcom" />
			</property>
		</properties>
	</rule>
	<rule ref="Jetpack.Functions.I18n">
		<properties>
			<property name="text_domain" value="jetpack-mu-wpcom" />
		</properties>
	</rule>

	<rule ref="WordPress.Utils.I18nTextDomainFixer">
		<properties>
			<property name="old_text_domain" type="array">
				<element value="newspack-blocks" />
			</property>
			<property name="new_text_domain" value="jetpack-mu-wpcom" />
		</properties>
	</rule>

	<!-- Exclude specific file from the FileName and FileComment rules -->
    <rule ref="WordPress.Files.FileName.NotHyphenatedLowercase">
        <exclude-pattern>*/full-site-editing-*.php</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.FileComment.Missing">
        <exclude-pattern>*/full-site-editing-*.php</exclude-pattern>
    </rule>

</ruleset>
