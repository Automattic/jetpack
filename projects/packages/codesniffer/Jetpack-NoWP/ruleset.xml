<?xml version="1.0"?>
<ruleset name="Jetpack-NoWP">
	<description>Standard to disable WordPress-specific rules (and re-enable some disabled by PHPCompatibilityWP), for use by packages that don't run inside of WordPress.</description>

	<rule ref="Jetpack-Compat-NoWP" />

	<rule ref="WordPress.Files.FileName">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.NamingConventions.ValidFunctionName">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.NamingConventions.ValidVariableName">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.PHP.DiscouragedPHPFunctions">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.Security.EscapeOutput">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.Security.NonceVerification">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.WP.AlternativeFunctions">
		<severity>0</severity>
	</rule>

</ruleset>
