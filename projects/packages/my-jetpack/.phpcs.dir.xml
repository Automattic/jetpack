<?xml version="1.0"?>
<ruleset>

	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="jetpack-my-jetpack" />
			</property>
		</properties>
	</rule>
	<rule ref="Jetpack.Functions.I18n">
		<properties>
			<property name="text_domain" value="jetpack-my-jetpack" />
		</properties>
	</rule>

	<rule ref="WordPress.Utils.I18nTextDomainFixer">
		<properties>
			<property name="old_text_domain" type="array" />
			<property name="new_text_domain" value="jetpack-my-jetpack" />
		</properties>
	</rule>
	 <rule ref="ImportDetection">
		<exclude-pattern type="relative-root">tests/*</exclude-pattern>
		<properties>
			<property name="ignoreWordPressSymbols" value="true"/>
		</properties>
	</rule>
	<rule ref="ImportDetection.Imports.RequireImports.Symbol">
		<type>error</type>
	</rule>

</ruleset>
