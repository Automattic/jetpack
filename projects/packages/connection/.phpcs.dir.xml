<?xml version="1.0"?>
<ruleset>

	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="jetpack-connection" />
				<element value="jetpack-idc" />
			</property>
		</properties>
	</rule>
	<rule ref="Jetpack.Functions.I18n">
		<properties>
			<property name="text_domain" value="jetpack-connection" />
			<property name="text_domain" value="jetpack-idc" />
		</properties>
	</rule>

	<rule ref="WordPress.Utils.I18nTextDomainFixer">
		<properties>
			<property name="old_text_domain" type="array" />
			<property name="new_text_domain" value="jetpack-connection" />
		</properties>
	</rule>

</ruleset>
