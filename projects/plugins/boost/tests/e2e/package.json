{
	"name": "jetpack-boost-e2e-tests",
	"private": true,
	"description": "Boost your WordPress site's performance, from the creators of Jetpack.",
	"homepage": "https://jetpack.com/boost/",
	"bugs": {
		"url": "https://github.com/Automattic/jetpack/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Automattic/jetpack.git"
	},
	"license": "GPL-2.0-or-later",
	"author": "Automattic",
	"scripts": {
		"clean": "rm -rf output",
		"distclean": "rm -rf node_modules && pnpm run clean",
		"env-start": "./node_modules/jetpack-e2e-tests/bin/env.sh start --activate-plugins boost",
		"env-stop": "./node_modules/jetpack-e2e-tests/bin/env.sh stop",
		"env-reset": "./node_modules/jetpack-e2e-tests/bin/env.sh reset --activate-plugins boost",
		"tunnel-on": "pm2 start ./node_modules/jetpack-e2e-tests/bin/ecosystem.config.js && pm2 logs --nostream --lines 4",
		"tunnel-reset": "rm -rf config/tmp && pnpm run tunnel-on",
		"tunnel-off": "pm2 delete ./node_modules/jetpack-e2e-tests/bin/ecosystem.config.js && NODE_ENV=test node ./node_modules/jetpack-e2e-tests/bin/tunnel.js off",
		"tunnel-write-logs": "pm2 logs --nostream --lines 10000 > output/logs/tunnel.log",
		"pretest-e2e": "pnpm run clean",
		"test-e2e": "NODE_CONFIG_DIR='./config' jest --config ./jest.config.js --runInBand --verbose --detectOpenHandles --json --outputFile=output/summary.json",
	  	"test-decrypt-config": "openssl enc -md sha1 -aes-256-cbc -d -pass env:CONFIG_KEY -in ./node_modules/jetpack-e2e-tests/config/encrypted.enc -out ./config/local-test.js",
	  	"test-encrypt-config": "openssl enc -md sha1 -aes-256-cbc -pass env:CONFIG_KEY -in ./config/local-test.js -out ./node_modules/jetpack-e2e-tests/config/encrypted.enc",
	  	"postinstall" : "cp ./node_modules/jetpack-e2e-tests/config/default.js ./config/local.js && cd ./node_modules/jetpack-e2e-tests && pnpm install"
	},
	"devDependencies": {
		"@babel/core": "7.13.16",
		"@babel/preset-env": "7.13.15",
		"@wordpress/eslint-plugin": "9.0.3",
	  	"babel-jest": "26.6.3",
		"eslint": "7.24.0",
		"eslint-plugin-jest": "24.3.5",
		"expect-playwright": "^0.7.2",
		"jest": "26.6.3",
		"jest-circus": "26.6.3",
		"jest-circus-allure-environment": "1.1.0",
		"jest-environment-node": "26.6.2",
		"jest-junit": "12.0.0",
		"jest-runner-groups": "2.0.1",
		"jest-stare": "2.2.1",
		"jetpack-e2e-tests": "link:../../../jetpack/tests/e2e",
		"pm2": "5.1.0"
	},
	"engines": {
	    "node": "^16.7.0",
		"pnpm": "^6.5.0",
		"yarn": "use pnpm instead - see docs/yarn-upgrade.md"
	}
}
