<?xml version="1.0"?>
<ruleset>
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="jetpack-inspect" />
			</property>
		</properties>
	</rule>
	<rule ref="./.phpcs.dir.phpcompatibility.xml" />
	<rule ref="WordPress.Files.FileName.NotHyphenatedLowercase">
		<severity>0</severity>
	</rule>
	<!-- This is very suboptimal, eventually we should bring the code up to the Monorepo standards in terms of comments. -->
	<rule ref="Squiz.Commenting">
		<severity>0</severity>
	</rule>
	<rule ref="Generic.Commenting">
		<severity>0</severity>
	</rule>
</ruleset>
