{
	"extends": "../../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			// fallback to resolving imports relative to _inc/client
			"*": [ "*", "./_inc/client/*" ],
			"@automattic/jetpack-*": [ "../../js-packages/*" ]
		}
	},
	"include": [ "./_inc" ],
	"exclude": [
		// internal directories to exclude
		"**/build/*",
		// exclude large (auto-generated) files
		"_inc/blocks/*"
	]
}
