{
	"name": "jetpack-e2e-tests",
	"private": true,
	"description": "[Jetpack](https://jetpack.com/) is a WordPress plugin that supercharges your self-hosted WordPress site with the awesome cloud power of [WordPress.com](https://wordpress.com).",
	"homepage": "https://jetpack.com",
	"bugs": {
		"url": "https://github.com/Automattic/jetpack/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Automattic/jetpack.git"
	},
	"license": "GPL-2.0-or-later",
	"author": "Automattic",
	"scripts": {
		"clean": "rm -rf output",
		"distclean": "rm -rf node_modules && pnpm run clean",
		"env-start": "./node_modules/jetpack-e2e-commons/bin/env.sh start",
		"env-stop": "./node_modules/jetpack-e2e-commons/bin/env.sh stop",
		"env-reset": "./node_modules/jetpack-e2e-commons/bin/env.sh reset",
		"tunnel-on": "pm2 start ./node_modules/jetpack-e2e-commons/bin/ecosystem.config.js && pm2 logs --nostream --lines 4",
		"tunnel-reset": "rm -rf config/tmp && pnpm run tunnel-on",
		"tunnel-off": "pm2 delete ./node_modules/jetpack-e2e-commons/bin/ecosystem.config.js && NODE_ENV=test node ./node_modules/jetpack-e2e-commons/bin/tunnel.js off",
		"tunnel-write-logs": "pm2 logs --nostream --lines 10000 > output/logs/tunnel.log",
		"pretest-e2e": "pnpm run clean",
		"test-e2e": ". ./node_modules/jetpack-e2e-commons/bin/app-password.sh && NODE_CONFIG_DIR='./config' jest --config jest.config.js --runInBand --verbose --detectOpenHandles --json --outputFile=output/summary.json",
		"test-decrypt-default-config": "openssl enc -md sha1 -aes-256-cbc -d -pass env:CONFIG_KEY -in ./node_modules/jetpack-e2e-commons/config/encrypted.enc -out ./node_modules/jetpack-e2e-commons/config/local-test.js",
		"test-decrypt-config": "pnpm run test-decrypt-default-config && openssl enc -md sha1 -aes-256-cbc -d -pass env:CONFIG_KEY -in ./config/encrypted.enc -out ./config/local-test.js",
		"test-encrypt-default-config": "openssl enc -md sha1 -aes-256-cbc -pass env:CONFIG_KEY -in ./node_modules/jetpack-e2e-commons/config/local-test.js -out ./node_modules/jetpack-e2e-commons/config/encrypted.enc",
		"test-encrypt-config": "pnpm run test-encrypt-default-config && openssl enc -md sha1 -aes-256-cbc -pass env:CONFIG_KEY -in ./config/local-test.js -out ./config/encrypted.enc",
	  	"slack": "NODE_CONFIG_DIR='./config' node ./node_modules/jetpack-e2e-commons/bin/slack.js",
	  	"preinstall": "pnpm --prefix ../../../../../tools/e2e-commons install"
	},
	"devDependencies": {
		"@babel/core": "7.13.16",
		"@babel/preset-env": "7.13.15",
		"@wordpress/eslint-plugin": "9.0.3",
		"babel-jest": "26.6.3",
		"chalk": "4.1.1",
		"config": "3.3.6",
		"eslint": "7.24.0",
		"eslint-plugin-jest": "24.3.5",
		"jest": "26.6.3",
	  	"jest-circus": "^27.2.1",
	  	"jest-circus-allure-environment": "^1.1.1",
		"jest-junit": "12.0.0",
		"jest-runner-groups": "2.0.1",
		"jest-stare": "2.2.1",
		"jetpack-cli": "../../../../../tools/cli",
		"jetpack-e2e-commons": "link:../../../../../tools/e2e-commons",
		"lodash": "4.17.21",
		"mkdirp": "1.0.4",
		"pm2": "5.1.0",
		"rimraf": "3.0.2",
		"shell-escape": "0.2.0",
		"winston": "3.3.3"
	},
	"engines": {
		"node": "^14.17.6 || ^16.7.0",
		"pnpm": "^6.5.0",
		"yarn": "use pnpm instead - see docs/yarn-upgrade.md"
	},
	"browserslist": []
}
