{
	"compilerOptions": {
		"jsx": "react",
		"baseUrl": ".",
		"paths": {
			// fallback to resolving imports relative to _inc/client
			"*": [ "*", "./_inc/client/*" ]
		}
	},
	"include": [ "./_inc" ],
	// Jetpack puts build files into `_inc`, so we need exclude rules to skip those.
	"exclude": [ "**/build/*", "_inc/blocks/*" ]
}
