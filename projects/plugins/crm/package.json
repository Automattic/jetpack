{
	"name": "@automattic/jetpack-crm",
	"version": "5.6.0-alpha",
	"description": "The CRM for WordPress",
	"author": "Automattic",
	"license": "GPL-2.0",
	"scripts": {
		"build": "pnpm run clean && pnpm run build-client",
		"build-client": "NODE_PATH=\"$PWD/node_modules\" webpack",
		"build-concurrently": "pnpm run clean && concurrently 'pnpm:build-client' 'pnpm:build-php'",
		"build-production-concurrently": "pnpm run clean && concurrently 'NODE_ENV=production BABEL_ENV=production pnpm run build-client'",
		"clean": "rm -rf build/",
		"watch": "pnpm run build && NODE_PATH=\"$PWD/node_modules\" webpack watch"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Automattic/jetpack.git",
		"directory": "projects/plugins/crm"
	},
	"devDependencies": {
		"@automattic/jetpack-webpack-config": "workspace:*",
		"@automattic/remove-asset-webpack-plugin": "workspace:*",
		"@babel/core": "7.20.7",
		"@babel/preset-env": "7.20.2",
		"@babel/register": "7.18.9",
		"@babel/runtime": "7.20.7",
		"css-loader": "6.5.1",
		"glob": "8.1.0",
		"sass": "1.43.4",
		"sass-loader": "12.4.0",
		"webpack": "5.72.1",
		"webpack-cli": "4.9.1"
	},
	"engines": {
		"node": "^18.13.0",
		"yarn": "use pnpm instead - see docs/yarn-upgrade.md"
	}
}
