#!/usr/bin/env node

try {
	// eslint-disable-next-line no-global-assign
	require = require( 'esm' )( module /*, options*/ );
	require( '../cliRouter' ).cli();
} catch ( error ) {
	if ( error.code === "MODULE_NOT_FOUND" ) { // if yarn install hasn't been run, esm require will fail here.
		console.log( 'Something is missing from your install. Please run `yarn install` and try again.' );
	} else {
		console.log( error );
		console.log( 'Something unexpected happened. See error above.' );
	}
	process.exit( 1 );
}
