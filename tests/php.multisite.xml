        </testsuite>
        <testsuite name="widgets">
            <directory prefix="test_" suffix=".php">php/modules/widgets</directory>
        </testsuite>
        <testsuite name="sync">
            <directory prefix="test_" suffix=".php">php/sync</directory>
        </testsuite>
    </testsuites>
    <groups>
        <exclude>
            <group>external-http</group>
        </exclude>
    </groups>


</phpunit>
